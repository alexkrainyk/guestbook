{% extends 'base.html.twig' %}

{% block title %}Edit feedback{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit feedback</h5>
                    {{ form_start(form) }}
                    {{ form_row(form.text) }}
                    {{ form_rest(form) }}
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Update</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}